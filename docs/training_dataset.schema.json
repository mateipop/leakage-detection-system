{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local.leak_detect_ai_physics/training_dataset.schema.json",
  "title": "Leak Detection Windowed Training Record",
  "type": "object",
  "required": [
    "entity_type",
    "entity_id",
    "timestamp_start",
    "timestamp_end",
    "features",
    "feature_names",
    "label",
    "leak_node_id",
    "leak_coords"
  ],
  "properties": {
    "entity_type": { "type": "string" },
    "entity_id": { "type": "string" },
    "timestamp_start": { "type": "integer" },
    "timestamp_end": { "type": "integer" },
    "features": {
      "type": "array",
      "items": {
        "type": "array",
        "items": { "type": "number" }
      }
    },
    "feature_names": {
      "type": "array",
      "items": { "type": "string" }
    },
    "label": { "type": "integer", "enum": [0, 1] },
    "leak_node_id": { "type": ["string", "null"] },
    "leak_coords": {
      "type": ["object", "null"],
      "required": ["x", "y"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
